<%# NAVBAR ===================================================== %>

<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">
      <%= image_tag asset_path('logo.png') %>
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
          <li class="nav-item active">
            <a class="nav-link" href="#">My Lists</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">New List</a>
          </li>
      </ul>
    </div>
  </div>
</div>

<%# BANNER ===================================================== %>

<div class="banner" style="height: 400px; background-image: url('<%= asset_path('home_bg.webp') %>');">
  <div class="container">
    <h1>Manage your own lists of favorite movies</h1>
    <h2>And share it !</h2>
  </div>
</div>

<%# MY LISTS ===================================================== %>

<div class="container">
    <div class="row align-items-center pb-4">
        <div class="col-8">
            <h1>My Lists</h1>
        </div>
        <div class="col-4 text-end">
          <%# <button class="btn btn-primary">Add a new List</button> %>
          <%= link_to 'Add a new list', new_list_path, class: 'btn btn-primary mt-4' %>
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
      <% @lists.each do |list| %>
        <div id="cardlist" class="col">
            <div class="card h-100">
                <div class="card-body text-center bg-">
                    <h5 class="card-title"><%= list.name %></h5>
                </div>
            </div>
        </div>
      <% end %>
    </div>
</div>
